# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Message {
  id: ID!
  user_id: ID!
  user_name: String!
  body: String!
}

type User {
  id: ID!
  name: String!
}

type Query {
  messages: [Message!]!
}

input NewMessage {
  user_id: ID!
  body: String!
}

type Mutation {
  createMessage(input: NewMessage!): Message!
}
